<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/prefference_layout"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Select your preffered language"
        android:textColor="#000"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_marginTop="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="আপনার পছন্দ অনুযায়ী ভাষা নির্বাচন করুণ"
        android:textAlignment="center"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"

        android:layout_gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/BanglaSelect"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:buttonTint="#5255E70A"
            android:layoutDirection="rtl"
            android:text="Bangla"
            android:textColor="#000"
            android:background="#4DFFC107"
            android:paddingBottom="15dp"
            android:paddingRight="100dp"
            android:textSize="24dp" />

        <RadioButton
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:buttonTint="#122da6"
            android:layoutDirection="rtl"
            android:textColor="#000"
            android:text="English"
            android:background="#4DD396E4"
            android:paddingRight="100dp"
            android:paddingBottom="15dp"
            android:textSize="24dp"
            android:id="@+id/EnglSelect"/>
    </RadioGroup>

    <Button
        android:id="@+id/nextID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#000"
        android:background="#00000000"
        android:layout_gravity="center"
        android:textSize="24dp"/>
</LinearLayout>