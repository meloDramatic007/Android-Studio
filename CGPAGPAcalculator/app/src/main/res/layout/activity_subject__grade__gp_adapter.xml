<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Subject_Grade_GP_adapter">

    <TextView
        android:id="@+id/SubjectTV"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Subject"
        android:textColor="#efeae6"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/gradeTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gradeTV"
        android:layout_width="77dp"
        android:layout_height="33dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#efeae6"
        android:text="Grade"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/gradePointTV"
        app:layout_constraintStart_toEndOf="@+id/SubjectTV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gradePointTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Grade point"
        android:textColor="#efeae6"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gradeTV"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>